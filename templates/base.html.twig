<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        {{ encore_entry_link_tags('base') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
            <a class="navbar-brand mx-3" href="{{ path('index')}}">
                <div class="d-inline">
                    <img src="{{asset('build/img/logo.svg')}}" alt="" width="50" height="30" class="d-inline-block align-top m-1 fw-bold">
                </div>
                
                <div class="d-inline fw-bold">
                    Cestujme spoločne
                </div>
                
            </a>
            <button class="navbar-toggler m-2" data-target="#main-nav" data-toggle="collapse" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div id="main-nav" class="collapse navbar-collapse mx-2 fw-bold">
                <ul class="navbar-nav ml-auto">
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('index') }}">KALENDÁR</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('route') }}">PRIDAŤ JAZDU</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('my_routes') }}">MOJE JAZDY</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('profile') }}">PROFIL</a>
                    </li>
                    <!--
                    <li class="nav-item">
                        <a class="nav-link">NASTAVENIA</a>
                    </li>
                    -->
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">PRIHLÁSIŤ SA</a>
                    </li>
                    {% endif %}
                </ul>
                {% if app.user %}
                <form action="/logout" class="d-flex  fw-bold">
                    <button class="btn btn-outline-primary fw-bold bg-white me-2" type="submit">ODHLÁSIŤ SA</button>
                </form>
                {% endif %}
            </div>
        </nav>
        <div class="container text-center mt-1">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    {{ encore_entry_script_tags('base') }}
    </body>
</html>
