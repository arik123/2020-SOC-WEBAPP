{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.Meno) }}
        {{ form_row(registrationForm.Priezvisko) }}
        {{ form_row(registrationForm.about) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Heslo'
        }) }}
        {{form_row(registrationForm.profilePicture)}}
        {{ form_row(registrationForm.Car)}}
        {{ form_row(registrationForm.CarDescription)}}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
